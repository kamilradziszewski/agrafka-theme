{
  "name": "agrafka-theme",
  "version": "1.0.0",
  "description": "WordPress Theme for AgRafka Films",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run copy-purecss",
    "start": "npm-run-all --parallel watch:css",
    "watch:css": "nodemon --watch ./static/src/sass -e sass -x \"npm run build:css\"",
    "prebuild:css": "node-sass ./static/src/sass/main.sass ./static/dist/css/main.css --output-style expanded",
    "build:css": "node_modules/postcss-cli/bin/postcss --use autoprefixer --base 'last 2 versions' ./static/dist/css/main.css --replace --map",
    "copy-purecss": "rimraf ./static/src/sass/vendors/purecss && copyfiles -f './node_modules/purecss/build/**/*' './static/src/sass/vendors/purecss'"
  },
  "author": "Kamil Radziszewski",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.2.4",
    "copyfiles": "^1.2.0",
    "livereload": "^0.6.3",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.9",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "purecss": "^1.0.0",
    "rimraf": "^2.6.2"
  }
}
