{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content row">
				<div class="sidebar column medium-3 medium-offset-1 large-2 large-offset-1">
					<img src="{{ theme.link }}/static/dist/img/agrafka-logo.svg" alt="AgRafka Film logo" class="logo">
				</div>
				<div class="column medium-7 large-6 large-offset-1">
					<div class="article-body">
						{{post.content}}
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}